@{
    ViewData["Title"] = "Eventos";
}

<h1>Controle Geral</h1>
<ul class="nav navbar-dark nav-tabs">
    <li class="nav-item">
        <a class="nav-link" aria-current="page" asp-controller="Interno" asp-action="Index">Informações</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Interno" asp-action="Agenda">Agenda</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Interno" asp-action="Eventos">Eventos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Interno" asp-action="Locais">Locais</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Interno" asp-action="Financeiro">Financeiro</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Interno" asp-action="Cliente">Clientes</a>
    </li>
</ul>

<div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Decrição</th>
            <th scope="col">Endereço</th>
            <th scope="col">Ações</th>
           </tr>
        </thead>
        <tbody>

        @for (int i = 1; i <= 10; i++)
        {
            <tr>
                <td >@i</td>
                <td>1</td>
                <td>E-2</td>
                <td>
                    <a href='#'><i class="fas fa-plus-alt"></i>Alterar</a>
                    <a href='#'><i class="fas fa-pencil-alt"></i>Excluir</a>
                </td>
            </tr>
        }

        </tbody>
    </table>

    <footer>
        <a class="btn btn-secondary nav-link text-dark" asp-area="" asp-controller="Interno" asp-action="CadLocal">
            <b>Novo Local</b>
        </a>

    </footer>

</div>