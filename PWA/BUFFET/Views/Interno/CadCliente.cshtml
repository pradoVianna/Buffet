@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 login-section-wrapper">
          <div class="brand-wrapper">
            <img src="https://www.piktotal.com.br/wp-content/themes/piktotal/assets/img/titulo-buffet.png"   alt="logo" class="logo">
          </div>
          <div class="login-wrapper my-auto">
            <h1 class="login-title">Cadastro Cliente</h1>
            
            <form action="" method="post" class="text-left">
             
              <div class="form-group">
                <label for="clientName">Nome</label>
                <input type="text" name="clientName" id="clientName" class="form-control" placeholder="Digite o nome..">
              </div>
              <div class="form-group">
                <label for="clientEmail">E-mail</label>
                <input type="text" name="clientEmail" id="clientEmail" class="form-control" placeholder="Digite o e-mail..">
              </div>
              <div class="form-group">
                <label for="clientEnd">Endereço</label>
                <input type="text" name="clientEnd" id="clientEnd" class="form-control" placeholder="Digite o endereço..">
              </div>
              <div class="form-group">
                <label for="clientEmail">Email</label>
                <input type="text" name="clientEmail" id="clientEmail" class="form-control" placeholder="Digite o nome..">
              </div>
              <div class="form-group">
                <label for="clientCpfCnpj">CPF/CNPJ</label>
                <input type="text" name="clientCpfCnpj" id="clientCpfCnpj" class="form-control" placeholder="Digite o CPF ou CNPJ..">
              </div>
              <div class="form-group">
                <label for="clientDataNasc">Data Nascimento</label>
                <input type="text" name="clientDataNasc" id="clientDataNasc" class="form-control" placeholder="Digite a data de nascimento..">
              </div>
              
              <input name="Cadastrar" id="Cadastrar" class="btn-block btn btn-secondary" type="submit" value="Cadastrar">
            <p class="login-wrapper-footer-text"><a asp-area="" asp-controller="Interno" asp-action="Cliente" class="text-reset">Voltar</a></p>
              </form>
            
          </div>
        </div>
       
      </div>
    </div>
 
</div>
@section Scripts{
  <script>
  
  </script>
};