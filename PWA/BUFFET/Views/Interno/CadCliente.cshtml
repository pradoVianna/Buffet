@{
    ViewData["Title"] = "Clientes";
}


        
            <h1 class="display-1 text-center">Cadastro Cliente</h1><hr>
            
            <form action="" method="post" class="text-left">
             
              <div class="d-flex justify-content-center">
                <label for="clientName">Nome</label>
                <input type="text" name="clientName" id="clientName" class="w-50 form-control ml-3 mr-3" placeholder="Nome completo..">
              
                <label for="clientEmail">E-mail</label>
                <input type="text" name="clientEmail" id="clientEmail" class="w-50 form-control ml-3" placeholder="E-mail..">
              </div>
              <div class="row">
                <div class="col-2">
                  
                </div>
              </div>
              <div class="row">
                <div class="col text-center"><label for="clientTipo1">Físico</label>
                  <input type="radio" name="clientTipo" class="form-control" id="clientTipo1" value="1">
                </div>
                
                <div class="col text-center"><label for="clientTipo2">Jurídico</label>
                  <input type="radio" name="clientTipo"class="form-control" id="clientTipo2" value="2">
                </div>
                </div>
              
              <div class="d-flex justify-content-center">
                <label for="clientEnd">Endereço</label>
                <input type="text" name="clientEnd" id="clientEnd" class=" form-control ml-3 mr-3 w-50" placeholder="Endereço..">
              
                <label for="clientObs">Observações</label>
                <textarea name="clientObs" id="clientObs" class="form-control ml-3 w-50 " placeholder="Observações.."></textarea>
              </div>
             <div class="d-flex justify-content-center mt-3">
                <label for="clientDocument" id="labelDoc"></label>
                <input type="text" name="clientDocument" id="clientDocument" class="form-control ml-3 mt-2 mr-3 w-25">
                <div id="hide">
                  <div class="d-flex">
                  <label for="clientDataNasc">Data de Nascimento</label>
                  <input type="date" name="clientDataNasc" id="clientDataNasc" class=" form-control ml-3 mt-2">
                  </div>
                  </div>
                </div>
              <hr>
              <input name="Cadastrar" id="Cadastrar" class="btn-block btn btn-secondary" type="submit" value="Cadastrar">
            <p class="login-wrapper-footer-text"><a asp-area="" asp-controller="Interno" asp-action="Cliente" class="text-reset">Voltar</a></p>
              </form>
            
         
      
@section Scripts{
  <script>
    $(document).ready(function (){
      $("#hide").hide();
      $("#labelDoc").html("Documento");
      $("#clientDocument").attr("readonly","readonly");
    });
    $("#clientTipo1").on('click',function (){
      $("#hide").show();
      $("#labelDoc").html("CPF");
      $("#clientDocument").attr("placeholder","CPF..");
      $("#clientDocument").removeAttr("readonly");
    });
    $("#clientTipo2").on('click',function (){
          $("#hide").hide();
          $("#labelDoc").html("CNPJ");
           $("#clientDocument").attr("placeholder","CNPJ..");
          $("#clientDocument").removeAttr("readonly");
    });
    
  </script>
}